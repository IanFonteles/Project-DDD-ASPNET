@model IEnumerable<CrudDDD.MVC.ViewModels.JuridicPersonViewModel>

@{
    ViewBag.Title = "Index";
}

<h1><img src="https://www.ampliarseguros.com.br/tim.php?src=webroot/upload/2018/10/30/icons8-empresa-cliente-500-png-1540903100.png&w=300&h=300" class="img-responsive" width="150" height="150" /></h1>


@using (Html.BeginForm("Index", "JuridicPerson", FormMethod.Get, new { @class = "form-inline" })) {
    <input type="text" placeholder="Buscar um cliente" name="Busca" class="form-control" />
    <input type="submit" class="btn-default" value="Buscar" />

}
<p>
<p>
    @Html.ActionLink("Criar Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CNPJ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CellNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CNPJ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CellNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.ClientId }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.ClientId }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.ClientId })
            </td>
        </tr>
    }

</table>
